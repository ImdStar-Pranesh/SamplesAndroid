<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="NewApi">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:foreground="@drawable/ripple"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="1 Jan 2015"
                android:textSize="14sp"/>

            <com.indiainnovates.pucho.widgets.BezelImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/navdrawer_profile_image_size"
                android:layout_height="@dimen/navdrawer_profile_image_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person_image_empty"

                />


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/date"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/date"
                android:text="Shreya Parameswaran Joel"
                android:textSize="14sp"
                android:visibility="visible"/>

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/profile_image"
                android:layout_marginTop="10dp"
                android:background="#000"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:minLines="1"
                android:text="What are the adavantages of using Dagger which is a dependency injection Libray for android?"
                android:textSize="18sp"/>

            <!--<TextView

                 android:id="@+id/like"
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/question"
                 android:layout_alignStart="@+id/question"
                 android:layout_below="@+id/question"
                 android:layout_marginTop="20dp"
                 android:text="25 People have this Question"/>

            <View
                 android:id="@+id/separator2"
                 android:layout_width="match_parent"
                 android:layout_height="1px"
                 android:layout_below="@+id/like"
                 android:layout_marginTop="10dp"
                 android:background="#000"/>

             <TextView
                 android:id="@+id/answer_count"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignEnd="@+id/question"
                 android:layout_alignRight="@+id/question"
                 android:layout_alignTop="@+id/like"
                 android:layout_marginRight="16dp"
                 android:text="103 Answers"
                 android:textSize="14sp"/>

             <ImageButton
                 android:id="@+id/share_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignEnd="@+id/question"
                 android:layout_alignRight="@+id/question"
                 android:layout_below="@+id/separator2"
                 android:layout_marginBottom="10dp"
                 android:layout_marginTop="5dp"
                 android:backgroundTint="@android:color/transparent"
                 android:src="@android:drawable/ic_menu_share"
                 android:tint="@color/accent"/>

             <ImageButton
                 android:id="@+id/like_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignTop="@+id/share_btn"
                 android:layout_marginRight="20dp"
                 android:layout_toLeftOf="@+id/share_btn"
                 android:layout_toStartOf="@+id/share_btn"
                 android:backgroundTint="@android:color/transparent"
                 android:src="@android:drawable/btn_star_big_on"
                 android:tint="@color/accent"/>-->


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

