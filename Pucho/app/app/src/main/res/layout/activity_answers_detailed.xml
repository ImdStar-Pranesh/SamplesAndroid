<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout = "@layout/toolbar"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/my_awesome_toolbar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/answer_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Jan 2015"
                android:textSize="14sp"
                android:id="@+id/dateTv1"

                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/profile_image_2"
                android:src="@drawable/person_image_empty"/>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shreya Parameswaran Joel"
                android:textSize="14sp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/profile_image_2"
                android:layout_toRightOf="@+id/profile_image_2"
                android:layout_toLeftOf="@+id/dateTv1"
                android:layout_toEndOf="@+id/dateTv1" />
            <TextView
                android:id="@+id/roleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UX Designer"

                android:layout_alignLeft="@+id/nameTV"
                android:layout_below="@+id/nameTV"/>

            <TextView
                android:id="@+id/ansTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_text"
                android:layout_below="@+id/profile_image_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/likesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="103 Likes"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@+id/ansTV"
                android:layout_below="@+id/ansTV"/>

            <View
                android:background="#000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/likesTV"
                android:id="@+id/separator3"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>